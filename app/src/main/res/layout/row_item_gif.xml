<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/tabSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_4sdp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            app:roundedCornerRadius="@dimen/_8sdp"
            app:placeholderImage="@drawable/ractengle_round_solid_light_gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:layout_gravity="center_horizontal|bottom">

            <View
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ractengle_round_gradian_shadow"/>

            <LinearLayout
                android:elevation="@dimen/_2sdp"
                android:id="@+id/tabOption"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:padding="@dimen/_8sdp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    app:tint="@color/white"
                    android:background="@drawable/dr_ripple_ractengle"
                    android:src="@drawable/share" />

            </LinearLayout>


        </RelativeLayout>
    </FrameLayout>
</layout>