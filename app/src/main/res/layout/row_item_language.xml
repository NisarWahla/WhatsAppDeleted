<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabSelection"
        android:background="@drawable/dr_ripple_ractengle">


        <RelativeLayout
            android:id="@+id/tabBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/ractengle_solid_white"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/tabStart"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_toStartOf="@+id/ivSelection"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvFlag"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:textAlignment="viewStart"
                    android:includeFontPadding="false"
                    android:text="@string/app_name"
                    android:textSize="@dimen/_21sdp" />


                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:textAlignment="viewStart"
                    android:includeFontPadding="false"
                    android:text="@string/app_name"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <ImageView
                android:layout_marginStart="@dimen/_6sdp"
                android:id="@+id/ivSelection"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_8sdp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_unselected" />

        </RelativeLayout>



    </RelativeLayout>
</layout>